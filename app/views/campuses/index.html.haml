%h1 Campuses

%table
  %tr
    %th Campus Name
    %th Campus Location
    - @campuses.each do |campus|
      %tr
        %td= campus.campus_name
        %td= campus.location
        %td= link_to 'Show', campus
        %td= link_to 'Edit', edit_campus_path(campus)
        %td= link_to 'Destroy', campus, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Campus', new_campus_path

= will_paginate @campuses

 